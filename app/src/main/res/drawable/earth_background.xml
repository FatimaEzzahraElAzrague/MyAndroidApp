<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="1080dp"
    android:height="1920dp"
    android:viewportWidth="1080"
    android:viewportHeight="1920">

    <!-- Background - Deep space with stars -->
    <defs>
        <!-- Radial gradient for Earth -->
        <radialGradient
            android:id="@+id/earthGradient"
            android:centerX="0.3"
            android:centerY="0.5"
            android:gradientRadius="400">
            <item android:offset="0.0" android:color="#1A1B2E" />
            <item android:offset="0.3" android:color="#16213E" />
            <item android:offset="0.6" android:color="#0F3460" />
            <item android:offset="1.0" android:color="#0F3460" />
        </radialGradient>
        
        <!-- Gradient for city lights -->
        <radialGradient
            android:id="@+id/cityLightsGradient"
            android:centerX="0.25"
            android:centerY="0.5"
            android:gradientRadius="300">
            <item android:offset="0.0" android:color="#FF6B35" />
            <item android:offset="0.3" android:color="#FE6D38" />
            <item android:offset="0.7" android:color="#FF8B61" />
            <item android:offset="1.0" android:color="#00000000" />
        </radialGradient>
        
        <!-- Gradient for day side -->
        <radialGradient
            android:id="@+id/daySideGradient"
            android:centerX="0.7"
            android:centerY="0.5"
            android:gradientRadius="350">
            <item android:offset="0.0" android:color="#FF9800" />
            <item android:offset="0.3" android:color="#FFB74D" />
            <item android:offset="0.6" android:color="#4CAF50" />
            <item android:offset="1.0" android:color="#2196F3" />
        </radialGradient>
    </defs>

    <!-- Background stars -->
    <g android:name="stars">
        <!-- Small stars scattered across the background -->
        <circle android:cx="100" android:cy="200" android:r="1" android:fill="#FFFFFF" android:alpha="0.8" />
        <circle android:cx="300" android:cy="150" android:r="0.8" android:fill="#FFFFFF" android:alpha="0.6" />
        <circle android:cx="500" android:cy="300" android:r="1.2" android:fill="#FFFFFF" android:alpha="0.9" />
        <circle android:cx="700" android:cy="100" android:r="0.6" android:fill="#FFFFFF" android:alpha="0.7" />
        <circle android:cx="900" android:cy="400" android:r="1" android:fill="#FFFFFF" android:alpha="0.8" />
        <circle android:cx="200" android:cy="600" android:r="0.8" android:fill="#FFFFFF" android:alpha="0.6" />
        <circle android:cx="400" android:cy="800" android:r="1.1" android:fill="#FFFFFF" android:alpha="0.9" />
        <circle android:cx="600" android:cy="700" android:r="0.7" android:fill="#FFFFFF" android:alpha="0.7" />
        <circle android:cx="800" android:cy="900" android:r="1" android:fill="#FFFFFF" android:alpha="0.8" />
        <circle android:cx="150" android:cy="1000" android:r="0.9" android:fill="#FFFFFF" android:alpha="0.6" />
        <circle android:cx="350" android:cy="1200" android:r="1.3" android:fill="#FFFFFF" android:alpha="0.9" />
        <circle android:cx="550" android:cy="1100" android:r="0.8" android:fill="#FFFFFF" android:alpha="0.7" />
        <circle android:cx="750" android:cy="1300" android:r="1.1" android:fill="#FFFFFF" android:alpha="0.8" />
        <circle android:cx="950" android:cy="1400" android:r="0.7" android:fill="#FFFFFF" android:alpha="0.6" />
        <circle android:cx="250" android:cy="1600" android:r="1" android:fill="#FFFFFF" android:alpha="0.9" />
        <circle android:cx="450" android:cy="1500" android:r="0.8" android:fill="#FFFFFF" android:alpha="0.7" />
        <circle android:cx="650" android:cy="1700" android:r="1.2" android:fill="#FFFFFF" android:alpha="0.8" />
        <circle android:cx="850" android:cy="1800" android:r="0.6" android:fill="#FFFFFF" android:alpha="0.6" />
    </g>

    <!-- Earth - Main planet -->
    <ellipse
        android:cx="540"
        android:cy="960"
        android:rx="300"
        android:ry="300"
        android:fill="@drawable/earthGradient" />

    <!-- City lights on night side -->
    <ellipse
        android:cx="440"
        android:cy="960"
        android:rx="250"
        android:ry="250"
        android:fill="@drawable/cityLightsGradient" />

    <!-- Day side with atmosphere glow -->
    <ellipse
        android:cx="640"
        android:cy="960"
        android:rx="280"
        android:ry="280"
        android:fill="@drawable/daySideGradient" />

    <!-- Atmospheric glow around Earth -->
    <ellipse
        android:cx="540"
        android:cy="960"
        android:rx="320"
        android:ry="320"
        android:fill="#00000000"
        android:stroke="#4CAF50"
        android:strokeWidth="2"
        android:alpha="0.3" />

    <!-- Additional atmospheric layers -->
    <ellipse
        android:cx="540"
        android:cy="960"
        android:rx="340"
        android:ry="340"
        android:fill="#00000000"
        android:stroke="#2196F3"
        android:strokeWidth="1"
        android:alpha="0.2" />

</vector> 